# EditorConfig - https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# Markdown - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Makefile - requires tab indentation
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 4

# Python
[*.py]
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# TOML
[*.toml]
indent_size = 2
